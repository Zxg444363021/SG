<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.globalformulae.shiguang.maininterface.ScheduleInfoActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_schedule_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30px">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/et_schedule_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="任务名称"
                    android:imeActionLabel="任务名称"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"

                    android:maxLines="1"
                    />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                >
                <EditText
                    android:id="@+id/et_schedule_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="描述"
                    android:imeActionLabel="描述"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:textColorHighlight="?attr/colorAccent"
                    />
            </android.support.design.widget.TextInputLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#404040"
                android:text="设为重要事物"
                android:layout_gravity="start"/>
            <Switch
                android:id="@+id/switch_ifImp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                />
        </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间选择"
                    android:layout_gravity="start"/>
                <TextView
                    android:id="@+id/tv_schedule_info_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="2017年4月10日 星期一">
                </TextView>
            </FrameLayout>
            <TextView
                android:id="@+id/tv_schedule_info_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60px"
                android:layout_gravity="center_horizontal"
                android:text="21:06"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@+id/linearLayout"
            app:layout_anchorGravity="bottom|end"
            android:layout_margin="10dp"
            app:fabSize="normal"
            android:src="@drawable/ic_check_black_24dp"
            />
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
